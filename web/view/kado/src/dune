(library
 (name kado)
 (public_name bonsai_web.kado)
 (libraries core virtual_dom bonsai bonsai_web_ui_view virtual_dom.css_gen
   js_of_ocaml virtual_dom.ui_effect)
 (preprocess
  (pps ppx_jane ppx_css js_of_ocaml-ppx bonsai.ppx_bonsai)))

(rule
 (targets tabs_style.ml tabs_style.mli tabs_style__generated.ml
   tabs_style__generated.mli)
 (deps tabs_style.css)
 (action
  (bash "%{bin:css_inliner} %{deps} \"((rewrite ()))\"")))

